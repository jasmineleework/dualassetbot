# Application Settings
APP_NAME=DualAssetBot
APP_ENV=development
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dual_asset_bot
REDIS_URL=redis://localhost:6379/0

# Binance API Configuration
# IMPORTANT: Use your own API keys and keep them secure!
# Start with read-only API keys for safety
# How to create API keys: https://www.binance.com/en/support/faq/360002502072
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_api_secret_here
BINANCE_TESTNET=False  # False for production, True for testnet

# Production Safety Settings (IMPORTANT!)
DEMO_MODE=True  # True = simulate trades (recommended for testing), False = real trades
MAX_TRADE_AMOUNT=10.0  # Maximum trade amount in USDT (safety limit)
TRADING_ENABLED=False  # Master switch for trading (set to True only when ready)
USE_PUBLIC_DATA_ONLY=False  # True = use only public market data (no API key needed)

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Trading Configuration
DEFAULT_INVESTMENT_AMOUNT=100  # USDT
MAX_SINGLE_INVESTMENT_RATIO=0.2  # 20% of total capital
MIN_APR_THRESHOLD=0.15  # 15% minimum annual percentage rate
RISK_LEVEL=5  # 1-10, where 10 is most aggressive

# Monitoring
SENTRY_DSN=  # Optional: Sentry error tracking
LOG_LEVEL=INFO

# Notification (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_PASSWORD=