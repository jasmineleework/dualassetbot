# Application Settings
APP_NAME=DualAssetBot
APP_ENV=development
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dual_asset_bot
REDIS_URL=redis://localhost:6379/0

# Binance API Configuration
# ⚠️ SECURITY WARNING: NEVER commit real API keys to GitHub!
# This file is an example. Copy it to .env and add your actual keys there.
# The .env file is gitignored and will not be uploaded to GitHub.

# Testnet API Keys (for testing without real money)
# Get testnet keys from: https://testnet.binance.vision/
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Production API Keys (for real trading - BE CAREFUL!)
# Get production keys from: https://www.binance.com/en/my/settings/api-management
# Recommended: Start with READ-ONLY permissions for safety
BINANCE_PRODUCTION_API_KEY=your_production_api_key_here
BINANCE_PRODUCTION_API_SECRET=your_production_api_secret_here

# Environment Selection
BINANCE_USE_TESTNET=False  # True = testnet (safe), False = production (real money)

# Production Safety Settings (IMPORTANT!)
DEMO_MODE=True  # True = simulate trades (recommended for testing), False = real trades
MAX_TRADE_AMOUNT=10.0  # Maximum trade amount in USDT (safety limit)
TRADING_ENABLED=False  # Master switch for trading (set to True only when ready)
USE_PUBLIC_DATA_ONLY=False  # True = use only public market data (no API key needed)

# Claude API Configuration (for AI-powered analysis)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229  # Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1500  # Maximum tokens for response
CLAUDE_TEMPERATURE=0.7  # Creativity level (0.0-1.0, higher = more creative)

# AI Cache Configuration
AI_CACHE_ENABLED=true  # Enable caching of AI analyses
AI_CACHE_TTL=3600  # Cache time-to-live in seconds (3600 = 1 hour)

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Trading Configuration
DEFAULT_INVESTMENT_AMOUNT=100  # USDT
MAX_SINGLE_INVESTMENT_RATIO=0.2  # 20% of total capital
MIN_APR_THRESHOLD=0.15  # 15% minimum annual percentage rate
RISK_LEVEL=5  # 1-10, where 10 is most aggressive

# Monitoring
SENTRY_DSN=  # Optional: Sentry error tracking
LOG_LEVEL=INFO

# Notification (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_PASSWORD=